@using BitCI.Models.BuildSteps
@model BitCI.Models.Build

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Build</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectId, "ProjectId", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("ProjectId", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.ProjectId, "", new {@class = "text-danger"})
            </div>
        </div>
    </div>

    <h5>Build Steps</h5>
    <div class="form-group">
        <h5>1. VersionControlStep</h5>
        <select class='form-control'>
            <option value="Git">Git</option>
        </select>
        <input type="text" id="vcs" name="vcs" value="Github project https link" size="40" />

        <h5>2. BuildStep</h5>
        <select class='form-control'>
            <option value="MSBuild">MSBuild</option>
        </select>
        <input type="text" id="buildStep" name="buildStep" value="Your *.sln file name" size="40" />

        <h5>3. RunTestsStep</h5>
        <select class='form-control'>
            <option value="NUnit">NUnit</option>
        </select>
        <input type="text" id="run" name="run" value="Relative path to .dll from *.sln file" size="40" />

        <h5>4. PostBuildEmailStep</h5>
        <select class='form-control'>
            <option value="SMTP">SMTP</option>
        </select>
        <input type="text" id="mail" name="mail" value="Email recipient at mail.ru" size="40" />

        <h5>5. TriggerStep</h5>
        <input type="text" id="trigger" name="trigger" value="Use HH:MM:SS format" size="40" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
