@using BitCI.Context
@model BitCI.Models.Build

@{
    ViewBag.Title = "Run";
}

<h2>Run</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Build</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectId, "ProjectId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-primary" style="font-size: 20px">
                @ViewBag.ProjectName
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @Html.DisplayTextFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Workspace, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @Html.DisplayTextFor(model => model.Workspace)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @Html.DisplayTextFor(model => model.Duration)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TriggeredBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @Html.DisplayTextFor(model => model.TriggeredBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Log, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @Html.DisplayTextFor(model => model.Log)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 text-info" style="font-size: 20px">
                @ViewBag.StartDateNow
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Run" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
